import Lexer::Token;

namespace firec {
    enum NodeKind {
        Literal(int),
        CallFunc(func: Node, args: Vec<Node>),
        KeyValuePair(key: Node, value: Node),
        Expr(ExprKind, Vec<Node>)
    }

    enum ExprKind {
        Add,
        Sub
    }
    
    class Node {
        var kind: NodeKind;
        var token: Lexer::Token;

        fn lowering() -> LowedNode {
        }

        fn new_value(tok: Lexer::Token, val: Object) -> Node {
            return Node(kind: NodeKind::Literal(val), token: tok);
        }

        fn new_call_func(tok: Lexer::Token, func: Node, args: Vec<Node>) -> Node {
            return Node(kind: NodeKind::CallFunc(func: func, args: args), token: tok);
        }

        fn new_expr(tok: Lexer::Token, kind: ExprKind, terms: Vec<Node>) -> Node {
            return Node(kind: NodeKind::Expr(kind, terms), token: tok);
        }
    }
}